import pandas as pd
import matplotlib.pyplot as plt
from src.models.facility import Facility

stations = {
    "Accessioning": (5, 25),
    "Centrifuge": (15, 25),
    "Chemistry": (30, 30),
    "Hematology": (30, 15),
    "Immunology": (45, 25),
    "Cold Storage": (20, 5),
    "Waste": (5, 5),
    "Courier Dock": (0, 25)
}

facility = Facility(stations)

flows = pd.read_csv("../data/flows_example.csv")

total = 0
for _, r in flows.iterrows():
    total += facility.distance(r["from"], r["to"]) * r["volume"]

print("Total walking distance:", round(total, 1))

plt.figure(figsize=(9,7))

for name,(x,y) in stations.items():
    plt.scatter(x,y)
    plt.text(x+0.5,y+0.5,name)

for _, r in flows.iterrows():
    x1,y1 = stations[r["from"]]
    x2,y2 = stations[r["to"]]
    plt.plot([x1,x2],[y1,y2],linewidth=0.5+r["volume"]/200)

plt.title("Clinical Lab Spaghetti Diagram")
plt.grid(True)
plt.show()
