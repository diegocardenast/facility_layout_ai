import matplotlib.pyplot as plt
from shapely.geometry import Polygon

from src.models.floorplan import FloorPlan
from src.generation.layout_sampler import LayoutSampler
from src.evaluation.static_metrics import *

floor = FloorPlan(60, 40)
sampler = LayoutSampler(floor)

valid = []

while len(valid) < 20:
    l = sampler.random_layout()
    if not l:
        continue

    if not waste_far_from_accessioning(l):
        continue
    if not micro_path_not_adjacent_to_chem(l):
        continue

    valid.append(l)

print("Generated:", len(valid))


def plot_layout(layout):
    fig, ax = plt.subplots()

    ax.set_xlim(0, 60)
    ax.set_ylim(0, 40)

    for name, (_, _, _, g) in layout.items():
        xs, ys = g.exterior.xy
        ax.fill(xs, ys, alpha=0.5)
        ax.text(g.centroid.x, g.centroid.y, name, ha="center")

    plt.show()


plot_layout(valid[0])

for l in valid:
    print(total_flow_distance(l))
